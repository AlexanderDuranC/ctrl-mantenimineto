<div class="row text-center pt-2">
    <h2 class="h1">Mantenimiento de elementos
</div>

<form action="/mantenimiento/elementos/add" method="post" class="container-fluid pt-3">
    <div class="row">
        <div class="col-md-4 form-floating mb-2">
            <input type="text" name="area" class="form-control bg-secondary text-white" id="area" placeholder="Area">
            <label for="area" class="text-white">Area:</label>
        </div>
        <div class="col-md-4 form-floating mb-2">
            <input type="text" name="responsable" class="form-control bg-secondary text-white" id="responsable" placeholder="Responsable">
            <label for="responsable" class="text-white">Responsable:</label>
        </div>
        <div class="col-md-4 form-floating mb-2">
            <input type="date" class="form-control bg-secondary text-white" name="fecha" placeholder="Fecha" value="{{fecha}}" id="fecha">
            <label for="fecha" class="text-white">Fecha:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 form-floating">
            <input type="text" name="tipo" class="form-control bg-secondary text-white" id="tipo" placeholder="Tipo">
            <label for="tipo" class="text-white">Tipo:</label>
        </div>
        <div class="col-md-4 form-floating mb-2">
            <input type="text" name="serie" class="form-control bg-secondary text-white" id="serie" placeholder="Serie" class="text-white">
            <label for="serie" class="text-white">Serie:</label>
        </div>
        <div class="col-md-4 form-floating mb-2">
            <input type="text" name="marca" class="form-control bg-secondary text-white" id="marca" placeholder="Marca">
            <label for="marca" class="text-white">Marca:</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 form-floating mb-2">
            <input type="text" name="referencia" class="form-control bg-secondary text-white" id="referencia" placeholder="Referencia">
            <label for="referencia" class="text-white">Referencia:</label>
        </div>
        <div class="col-md-4 form-floating mb-2">
            <textarea name="observaciones" id="observaciones" class="form-control bg-secondary text-white" placeholder="Observaciones"></textarea>
            <label for="observaciones" class="text-white">Observaciones:</label>
        </div>
    </div>
    <div class="modal-footer">
        <a href="/mantenimiento/elementos/" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</a>
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>
</form>